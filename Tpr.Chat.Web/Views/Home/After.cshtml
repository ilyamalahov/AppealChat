@model IndexViewModel
@{
    ViewData["Title"] = "Система онлайн консультирования по вопросам";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/before-after.css" />
    <meta name="theme-color" content="#fff">
    <link rel="icon" sizes="192x192" type="image/png" href="~/images/after/after-icon.png">
}

@section Scripts {
    <script type="text/javascript">
        var appealId = @Json.Serialize(Model.Session.AppealId);
    </script>
    <script type="text/javascript" src="~/js/after.js"></script>
}

<partial name="Sidemenu" />

<style>
    .main {
        display: flex;
        width: 100%;
        overflow-y: auto;
        text-align: center;
    }

        .main .title {
            margin-bottom: 20px;
            font-weight: bold;
            font-size: 20px;
        }

    .content-box {
        max-width: 500px;
        padding: 50px;
        margin: 20px;
        box-shadow: 0 0 5px 0 #ccc;
    }

    .after-icon {
        margin-bottom: 10px;
    }

        .after-icon img {
            width: 80px
        }

    .info-title {
        color: #ff941a;
        font-weight: bold;
        font-size: 20px;
        margin-bottom: 10px;
    }

    .info-item {
        margin-bottom: 30px;
    }

        .info-item .item-title {
            margin-bottom: 10px
        }

    .item-content img {
        margin-right: 5px;
        height: 20px;
        vertical-align: middle;
    }

    .item-content b {
        font-size: 20px;
        color: #000;
        vertical-align: middle;
    }

    .webcast-link {
        margin-bottom: 10px;
        color: #000;
    }

    .webcast-button {
        display: block;
        padding: 10px 30px;
        border-radius: 3px;
        text-align: left;
        color: #3587db;
        border: 1px solid #3587db;
    }

        .webcast-button:hover {
            text-decoration: underline;
        }

        .webcast-button img {
            height: 30px;
            margin-right: 30px;
        }

    @@media screen and (max-width: 767px) {
        .webcast-link {
            display: none;
        }
    }

    @@media screen and (min-width: 768px) {
        .webcast-button {
            display: none;
        }
    }
</style>

<div class="container">
    <partial name="Header" />
    <div class="content">
        <partial name="Sidebar" />
        <div class="main">
            <div style="margin: auto;">
                <div class="title">Консультация по аппеляции завершена</div>

                <div class="webcast-box" style="margin: auto; max-width: 350px; padding: 20px;">
                    <a class="webcast-button" href="@Model.Session.CommissionLink">
                        <div style="display: flex; align-items: center;">
                            <img src="~/images/after/film.png" alt="Онлайн-трансляция" />Онлайн трансляция заседания конфликтной комиссии
                        </div>
                    </a>
                </div>

                <div class="content-box">
                    <div class="after-icon"><img src="~/images/after/interview.png" /></div>

                    <div class="info-title">Сведения о заседании конфликтной комиссии</div>

                    <div class="info-item">
                        <div class="item-title">Заседание конфликтной комиссии, в рамках которой будет вынесено<br />Решение по Вашей аппеляции состоится</div>
                        <div class="item-content"><img src="~/images/after/calendar.png" alt="Календарь" /><b>@Model.Session.ApplicationDate</b></div>
                    </div>
                    <div class="info-item">
                        <div class="item-title">Запланированное время рассмотрения Вашей аппеляции</div>
                        <div class="item-content"><img src="~/images/after/clock.svg" alt="Время" /><b>@Model.Session.CommissionStartTime.ToShortTimeString() - @Model.Session.CommissionFinishTime.ToShortTimeString()</b></div>
                    </div>
                    <div class="webcast-link">Онлайн трансляцию заседания конфликтной комиссии Вы сможете посмотреть, перейдя по <a href="@Model.Session.CommissionLink">данной ссылке</a></div>

                    <div>По итогам рассмотрения аппеляции Вам будет направлено Решение конфликтной комисии, ознакомиться с которым Вы сможете в личном кабинете на Портале.</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal" style="display: none;" class="overlay modal-overlay"></div>