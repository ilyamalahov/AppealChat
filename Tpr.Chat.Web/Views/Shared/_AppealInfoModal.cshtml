@using Tpr.Chat.Core.Models
@model ChatSession


<div class="modal-window">
    <div class="modal-header">
        <div class="modal-title">Сведения об аппеляции</div>
        <button id="closeModalButton" class="custom-button close-button"><img src="~/images/modal-close.png" /></button>
    </div>
    <div class="modal-content">
        <ul class="appeal-info">
            <li><div class="appeal-caption">Номер апелляции</div><div class="appeal-value sidebar-highlight">@Model.AppealNumber</div></li>
            <li><div class="appeal-caption">Предмет</div><div class="appeal-value sidebar-highlight">@Model.SubjectName</div></li>
            <li><div class="appeal-caption">Дата экзамена</div><div class="appeal-value sidebar-highlight">@Model.ExamDate</div></li>
            <li><div class="appeal-caption">Зарегистрирована</div><div class="appeal-value sidebar-highlight">@Model.RegistrationDate</div></li>
            <li><div class="appeal-caption">Подано заявление</div><div class="appeal-value sidebar-highlight">@Model.ApplicationDate</div></li>
        </ul>
    </div>
</div>